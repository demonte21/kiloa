<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiloa Fleet Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&family=JetBrains+Mono:wght@400;500&display=swap"
        rel="stylesheet">
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Outfit', 'sans-serif'],
                        mono: ['JetBrains Mono', 'monospace'],
                    },
                    colors: {
                        kiloa: {
                            bg: '#09090b',         // Zinc 950
                            card: '#18181b',       // Zinc 900
                            cardHover: '#27272a',  // Zinc 800
                            border: '#3f3f46',     // Zinc 700
                            primary: '#8b5cf6',    // Violet 500
                            success: '#10b981',    // Emerald 500
                            danger: '#ef4444',     // Red 500
                            warning: '#f59e0b',    // Amber 500
                        }
                    },
                    animation: {
                        'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #050505;
            /* Deep Black */
            color: #d4d4d8;
            background-image: radial-gradient(circle at 50% 0%, #1e1b4b 0%, transparent 40%);
        }

        .stat-card {
            background: rgba(24, 24, 27, 0.6);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(63, 63, 70, 0.4);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            border-color: rgba(139, 92, 246, 0.5);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>

<body class="p-4 md:p-8 min-h-screen">

    <!-- Top Navigation / Branding -->
    <header class="max-w-7xl mx-auto mb-10 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight flex items-center gap-3">
                <span class="w-2 h-8 bg-kiloa-primary rounded-full"></span>
                Kiloa <span class="text-gray-500 font-light">Fleet Manager</span>
            </h1>
            <p class="text-gray-500 mt-1 font-mono text-sm">INFRASTRUCTURE HEARTBEAT</p>
        </div>
        <div class="flex items-center gap-3">
            <span
                class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-zinc-900 border border-zinc-800 text-xs font-mono text-gray-400">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></span>
                LIVE STREAM
            </span>
        </div>
    </header>

    <!-- Stats Grid -->
    <div class="max-w-7xl mx-auto mb-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">

        <!-- Active Agents -->
        <div class="stat-card rounded-2xl p-5">
            <div class="flex justify-between items-start mb-4">
                <div class="p-2 bg-zinc-900 rounded-lg text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
                        </path>
                    </svg>
                </div>
                <span class="text-xs font-mono text-gray-500">FLEET SIZE</span>
            </div>
            <div class="flex items-end gap-2">
                <span class="text-4xl font-bold text-white">
                    <%= stats.totalNodes %>
                </span>
                <span class="text-sm text-gray-400 mb-1">active units</span>
            </div>
        </div>

        <!-- RAM -->
        <div class="stat-card rounded-2xl p-5">
            <div class="flex justify-between items-start mb-4">
                <div class="p-2 bg-zinc-900 rounded-lg text-blue-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z">
                        </path>
                    </svg>
                </div>
                <span class="text-xs font-mono text-gray-500">MEMORY LOAD</span>
            </div>
            <div class="flex flex-col gap-2">
                <div class="flex justify-between items-end">
                    <span class="text-2xl font-bold text-white">
                        <%= stats.memUsed %>
                    </span>
                    <span class="text-xs text-gray-500 mb-1">of <%= stats.memTotal %></span>
                </div>
                <!-- Mini Progress Bar for Aggregate -->
                <div class="w-full h-1 bg-zinc-800 rounded-full overflow-hidden">
                    <div class="h-full bg-blue-500" style="width: 45%"></div> <!-- Placeholder % or calc in backend -->
                </div>
            </div>
        </div>

        <!-- Disk -->
        <div class="stat-card rounded-2xl p-5">
            <div class="flex justify-between items-start mb-4">
                <div class="p-2 bg-zinc-900 rounded-lg text-purple-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4">
                        </path>
                    </svg>
                </div>
                <span class="text-xs font-mono text-gray-500">STORAGE DEPLOYED</span>
            </div>
            <div class="flex flex-col gap-2">
                <div class="flex justify-between items-end">
                    <span class="text-2xl font-bold text-white">
                        <%= stats.diskUsed %>
                    </span>
                    <span class="text-xs text-gray-500 mb-1">of <%= stats.diskTotal %></span>
                </div>
                <div class="w-full h-1 bg-zinc-800 rounded-full overflow-hidden">
                    <div class="h-full bg-purple-500" style="width: 30%"></div>
                </div>
            </div>
        </div>

        <!-- Network -->
        <div class="stat-card rounded-2xl p-5">
            <div class="flex justify-between items-start mb-4">
                <div class="p-2 bg-zinc-900 rounded-lg text-emerald-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <span class="text-xs font-mono text-gray-500">TRAFFIC FLOW</span>
            </div>
            <div class="flex items-center gap-4">
                <div class="flex flex-col">
                    <span class="text-xs text-gray-500 uppercase">Ingress</span>
                    <span class="text-lg font-mono text-emerald-400">↓<%= stats.netDown %> <span
                                class="text-xs text-gray-500">Mbps</span></span>
                </div>
                <div class="w-px h-8 bg-zinc-800"></div>
                <div class="flex flex-col">
                    <span class="text-xs text-gray-500 uppercase">Egress</span>
                    <span class="text-lg font-mono text-blue-400">↑<%= stats.netUp %> <span
                                class="text-xs text-gray-500">Mbps</span></span>
                </div>
            </div>
        </div>
    </div>


    <!-- Main Content -->
    <div class="max-w-7xl mx-auto">

        <!-- Filters (Redesigned) -->
        <div class="mb-6 flex flex-wrap items-center gap-2">
            <button
                class="px-4 py-2 bg-zinc-900 border border-zinc-700 text-white rounded-lg text-xs font-medium hover:border-kiloa-primary transition shadow-lg shadow-purple-900/10 active:scale-95">
                Global View
            </button>
            <button
                class="px-4 py-2 hover:bg-zinc-900 border border-transparent hover:border-zinc-800 text-gray-500 rounded-lg text-xs font-medium transition">
                North America
            </button>
            <button
                class="px-4 py-2 hover:bg-zinc-900 border border-transparent hover:border-zinc-800 text-gray-500 rounded-lg text-xs font-medium transition">
                Europe
            </button>

            <div class="ml-auto flex items-center gap-2">
                <!-- Layout Lock Button -->
                <button id="toggle-layout-btn" onclick="toggleLayoutLock()"
                    class="px-3 py-2 bg-zinc-900 border border-zinc-800 text-gray-400 rounded-lg text-xs font-medium hover:text-white transition flex items-center gap-2">
                    <svg id="icon-locked" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                        </path>
                    </svg>
                    <svg id="icon-unlocked" class="w-4 h-4 hidden" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z">
                        </path>
                    </svg>
                    <span id="label-lock">Locked</span>
                </button>

                <!-- Search -->
                <div class="relative">
                    <input type="text" placeholder="Search node ID..."
                        class="bg-zinc-900/50 border border-zinc-800 text-xs text-gray-300 rounded-lg px-3 py-2 w-48 focus:outline-none focus:border-gray-600 transition">
                </div>
            </div>
        </div>

        <!-- Table (Redesigned as Floating Rows) -->
        <div id="nodes-container" class="space-y-4">

            <!-- Header Row -->
            <div
                class="grid grid-cols-12 gap-4 px-6 py-2 text-xs font-mono font-medium text-gray-500 uppercase tracking-wider">
                <div class="col-span-3">Node</div>
                <div class="col-span-1 text-center">CPU</div>
                <div class="col-span-2">Load</div>
                <div class="col-span-2">Memory</div>
                <div class="col-span-2">Storage</div>
                <div class="col-span-1">Network</div>
                <div class="col-span-1 text-right">State</div>
            </div>

            <!-- Client Rows (Clickable) -->
            <% nodes.forEach(function(node) { %>
                <div class="node-row" data-id="<%= node.id %>">
                    <a href="/node/<%= node.id %>"
                        class="block group relative bg-zinc-900/40 border border-zinc-800/50 hover:border-zinc-700 hover:bg-zinc-900/80 rounded-xl transition-all duration-200 mb-4 no-underline">

                        <!-- Main Row Content -->
                        <div class="p-4 grid grid-cols-12 gap-4 items-center z-20 relative">

                            <!-- Name / ID (Editable) -->
                            <div class="col-span-3 flex items-center gap-3">
                                <div
                                    class="node-avatar-text w-8 h-8 rounded bg-gradient-to-br from-zinc-800 to-zinc-900 flex items-center justify-center border border-zinc-700 font-bold text-gray-400 text-xs shadow-inner shrink-0">
                                    <%= (node.name || node.host_name || node.id).substring(0, 2).toUpperCase() %>
                                </div>
                                <div class="flex items-center gap-2 min-w-0">
                                    <span
                                        class="node-name-text text-sm font-bold text-white truncate group-hover:text-kiloa-primary transition"
                                        title="<%= node.id %>">
                                        <%= node.name || node.host_name || node.id %>
                                    </span>
                                    <!-- Edit Button (Stop propagation) -->
                                    <button onclick="event.preventDefault(); editNodeName('<%= node.id %>')"
                                        class="text-zinc-600 hover:text-white transition opacity-0 group-hover:opacity-100 p-1">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                            </path>
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            <!-- CPU/Cores -->
                            <div class="col-span-1 text-center">
                                <span class="text-xs font-bold text-gray-300 bg-zinc-800 px-2 py-1 rounded">
                                    <%= node.cores %>c
                                </span>
                            </div>

                            <!-- Load -->
                            <div class="col-span-2">
                                <div class="flex flex-col gap-1.5">
                                    <div class="flex justify-between text-[10px] items-center">
                                        <span class="text-gray-400 font-mono">
                                            <%= node.load_1.toFixed(2) %>
                                        </span>
                                        <span class="text-zinc-600 font-mono text-[9px]">
                                            <%= node.loadPercent %>%
                                        </span>
                                    </div>
                                    <div class="h-1 bg-zinc-800 rounded-full overflow-hidden w-3/4">
                                        <div class="h-full bg-amber-500 transition-all duration-500"
                                            style="width: <%= Math.min(node.loadPercent, 100) %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- RAM -->
                            <div class="col-span-2">
                                <div class="flex flex-col gap-1.5">
                                    <div class="flex justify-between text-[10px] items-center">
                                        <span class="text-gray-300">
                                            <%= node.memUsedGB %>G
                                        </span>
                                        <span class="text-zinc-600">
                                            <%= node.memTotalGB %>G
                                        </span>
                                    </div>
                                    <div class="h-1 bg-zinc-800 rounded-full overflow-hidden w-11/12">
                                        <div class="h-full bg-blue-500 transition-all duration-500"
                                            style="width: <%= node.memPercent %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Disk -->
                            <div class="col-span-2">
                                <div class="flex flex-col gap-1.5">
                                    <div class="flex justify-between text-[10px] items-center">
                                        <span class="text-gray-300">
                                            <%= node.diskUsedGB %>G
                                        </span>
                                        <span class="text-zinc-600">
                                            <%= node.diskTotalGB %>G
                                        </span>
                                    </div>
                                    <div class="h-1 bg-zinc-800 rounded-full overflow-hidden w-11/12">
                                        <div class="h-full bg-purple-500 transition-all duration-500"
                                            style="width: <%= node.diskPercent %>%"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Network (Stacked) -->
                            <div class="col-span-1 flex flex-col gap-1 justify-center">
                                <div class="flex items-center gap-1 text-[10px] font-mono leading-none">
                                    <span class="text-emerald-500 text-[9px]">↓</span>
                                    <span class="text-gray-400">
                                        <%= node.net_down.toFixed(1) %> <span
                                                class="text-[9px] text-zinc-600">Mbps</span>
                                    </span>
                                </div>
                                <div class="flex items-center gap-1 text-[10px] font-mono leading-none">
                                    <span class="text-blue-500 text-[9px]">↑</span>
                                    <span class="text-gray-400">
                                        <%= node.net_up.toFixed(1) %> <span class="text-[9px] text-zinc-600">Mbps</span>
                                    </span>
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="col-span-1 flex justify-end">
                                <% if (node.status==='online' ) { %>
                                    <span
                                        class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-[10px] font-bold uppercase tracking-wider shadow-[0_0_10px_rgba(16,185,129,0.2)]">
                                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
                                        Live
                                    </span>
                                    <% } else { %>
                                        <span
                                            class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md bg-red-500/10 border border-red-500/20 text-red-400 text-[10px] font-bold uppercase tracking-wider">
                                            <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
                                            Down
                                        </span>
                                        <% } %>
                            </div>
                        </div>

                        <div
                            class="bg-zinc-950/30 border-t border-zinc-800/50 rounded-b-xl px-4 py-2 flex justify-between items-center z-10 relative">

                            <div class="flex items-center gap-4 text-[10px] font-mono text-zinc-600">
                                <span class="text-gray-400 font-medium">
                                    <%= node.isp %>
                                </span>
                                <span class="text-zinc-800">|</span>
                                <span>ID: <span class="text-zinc-500 select-all">
                                        <%= node.id %>
                                    </span></span>
                            </div>

                            <div class="flex items-center gap-4 text-[10px] text-gray-500 font-mono">
                                <span>CPU STEAL: <span
                                        class="<%= node.cpu_steal > 10 ? 'text-red-400' : 'text-zinc-500' %>">
                                        <%= node.cpu_steal.toFixed(2) %>%
                                    </span></span>
                                <span class="text-zinc-800">|</span>
                                <span>SEEN: <span class="text-zinc-500">
                                        <%= new Date(node.last_seen).toLocaleTimeString([], {hour: '2-digit' ,
                                            minute:'2-digit'}) %>
                                    </span></span>
                            </div>
                        </div>

                    </a>
                </div>
                <% }); %>

        </div>
    </div>

    <script>
        // Layout Lock State
        let isLocked = localStorage.getItem('kiloa_layout_locked') !== 'false'; // Default to true if not set
        const lockBtn = document.getElementById('toggle-layout-btn');
        const iconLocked = document.getElementById('icon-locked');
        const iconUnlocked = document.getElementById('icon-unlocked');
        const labelLock = document.getElementById('label-lock');

        function updateLockUI() {
            if (isLocked) {
                iconLocked.classList.remove('hidden');
                iconUnlocked.classList.add('hidden');
                labelLock.textContent = 'Locked';
                lockBtn.classList.remove('text-purple-400', 'border-purple-500/50', 'bg-purple-500/10');
                lockBtn.classList.add('text-gray-400', 'border-zinc-800', 'bg-zinc-900');

                // Disable drag
                sortable.option("disabled", true);

                // Visual cleanup
                document.querySelectorAll('.block.group').forEach(el => {
                    el.classList.remove('cursor-move');
                });
            } else {
                iconLocked.classList.add('hidden');
                iconUnlocked.classList.remove('hidden');
                labelLock.textContent = 'Unlocked';
                lockBtn.classList.add('text-purple-400', 'border-purple-500/50', 'bg-purple-500/10');
                lockBtn.classList.remove('text-gray-400', 'border-zinc-800', 'bg-zinc-900');

                // Enable drag
                sortable.option("disabled", false);

                // Visual hint
                document.querySelectorAll('.block.group').forEach(el => {
                    el.classList.add('cursor-move');
                });
            }
        }

        function toggleLayoutLock() {
            isLocked = !isLocked;
            localStorage.setItem('kiloa_layout_locked', isLocked);
            updateLockUI();
        }

        // SortableJS initialization
        const el = document.getElementById('nodes-container');
        const sortable = Sortable.create(el, {
            animation: 150,
            handle: '.node-row', // Drag handle (entire row)
            draggable: '.node-row',
            disabled: true, // Start disabled, updateLockUI will fix
            onEnd: function (evt) {
                // Get new order
                const order = [];
                document.querySelectorAll('.node-row').forEach(row => {
                    order.push(row.getAttribute('data-id'));
                });

                // Send to API
                fetch('/api/reorder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ order })
                }).then(res => {
                    if (res.ok) console.log('Order saved');
                }).catch(err => console.error('Sort error:', err));
            }
        });

        // Edit Node Name
        function editNodeName(id) {
            const row = document.querySelector(`.node-row[data-id="${id}"]`);
            if (!row) return;

            const nameSpan = row.querySelector('.node-name-text');
            const currentName = nameSpan.textContent.trim();
            const newName = prompt("Enter new name for this node:", currentName);

            if (newName !== null && newName !== currentName) {
                fetch(`/api/node/${id}/name`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name: newName })
                }).then(res => {
                    if (res.ok) {
                        // Update DOM immediately without reload
                        nameSpan.textContent = newName;
                        const avatar = row.querySelector('.node-avatar-text');
                        if (avatar) avatar.textContent = newName.substring(0, 2).toUpperCase();
                    } else {
                        alert('Failed to update name');
                    }
                }).catch(err => console.error(err));
            }
        }

        // Initialize UI
        updateLockUI();

        // Auto-reload logic
        setTimeout(function () {
            // If unlocked (editing mode), maybe pause reload? 
            // Or just reload. If we reload, state is saved in localStorage, so it will come back unlocked.
            // But mid-drag reload is annoying.
            if (isLocked) {
                window.location.reload();
            } else {
                console.log('Reload paused while unlocked/editing.');
            }
        }, 5000);
    </script>
</body>

</html>